<h1>Short Puts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_puts.each do |short_put| %>
      <tr>
        <td><%= link_to 'Show', short_put %></td>
        <td><%= link_to 'Edit', edit_short_put_path(short_put) %></td>
        <td><%= link_to 'Destroy', short_put, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

