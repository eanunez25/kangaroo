    <div class="row">
      <% @bull_put_spreads.each do |bps| %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= bps.asset %> <%= number_to_currency(bps.strike) %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Floor 1</h6>
              <p class="card-text"><%= number_to_currency(bps.floor1) %></p>
              <h6 class="card-subtitle mb-2 text-muted">Floor 2</h6>
              <p class="card-text"><%= number_to_currency(bps.floor2) %></p>
              <h6 class="card-subtitle mb-2 text-muted">DTE</h6>
              <p class="card-text dte"><%= bps.dte.to_i %> <%= 'day'.pluralize(bps.dte.to_i) %></p>
              <p class="card-text"><%= bps.expiration.strftime("%m-%d-%y") %></p>
              <a href="/bull_put_spreads/<%= bps.id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>

      <% end  %>
    </div>